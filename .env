# =============================================
# Nekro VStack 开发环境配置
# =============================================
# 此文件包含开箱即用的开发环境配置
# 可以直接使用 `pnpm dev:all` 启动项目
# 
# 生产环境部署时，请参考 .env.example 修改配置
# =============================================

# 应用信息
APP_NAME="Nekro VStack API"
VITE_APP_NAME="Nekro VStack"
APP_DESCRIPTION="垂直切分的 AI 友好全栈开发模板"
VITE_APP_DESCRIPTION="垂直切分的 AI 友好全栈开发模板"
VERSION="0.1.0"
VITE_APP_VERSION="0.1.0"

# 运行环境
ENVIRONMENT="development"
DEBUG=false

# 服务器端口
HOST="0.0.0.0"
PORT=9871
VITE_HOST="localhost"
VITE_PORT=5173
VITE_BACKEND_URL="http://127.0.0.1:9871"

# 数据库（开发环境使用 SQLite）
DATABASE_URL="sqlite://./data/db.sqlite3"

# 安全配置（开发环境默认密钥，生产环境必须修改）
SECRET_KEY="dev-secret-key-change-in-production-please"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS 配置（允许本地端口访问）
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://localhost:5174"]

# API 配置（前端通过 Vite proxy 访问后端）
VITE_API_BASE_URL="/api"

# 功能开关
VITE_ENABLE_MOCK=false
VITE_ENABLE_DEBUG=false
